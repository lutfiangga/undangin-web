---
import { faqs } from "../lib/utils";
---

<section
  class="flex w-full flex-col items-center gap-2 py-6 text-white sm:py-12 md:gap-4 md:py-24"
>
  <div class="h-[2px] w-[10%] bg-green-300"></div>
  <h2
    class="mb-4 text-2xl font-semibold sm:mb-12 sm:text-3xl md:mb-16 md:text-4xl"
  >
    Cara Order Layanan Kami
  </h2>

  <div class="flex flex-col gap-2">
    <div class="mx-auto w-full max-w-7xl px-4 sm:px-6 lg:px-8">
      {
        faqs.map((faq, index) => (
          <div class="mb-8 w-full rounded-xl border border-solid border-green-300 p-4 transition duration-500 lg:p-4">
            <div class="relative w-full">
              <input
                type="checkbox"
                name={`faq-${index}`}
                id={`faq-${index}`}
                class="peer absolute z-10 h-full w-full cursor-pointer opacity-0"
              />
              <label
                for={`faq-${index}`}
                class="flex w-full items-center justify-between text-left text-lg leading-8 font-normal text-white transition-all duration-500 hover:text-green-300"
                aria-controls={`content-${index}`}
              >
                <h5 class="w-full hover:text-green-300">{faq.title}</h5>

                {/* Plus icon */}
                <svg
                  class="h-6 w-6 origin-center text-white transition duration-500 peer-checked:hidden"
                  viewBox="0 0 24 24"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M6 12H18M12 18V6"
                    stroke="currentColor"
                    stroke-width="1.6"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>

                {/* Minus icon */}
                <svg
                  class="hidden h-6 w-6 text-white transition duration-500 peer-checked:block"
                  viewBox="0 0 24 24"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M6 12H18"
                    stroke="currentColor"
                    stroke-width="1.6"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
              </label>

              <div
                id={`content-${index}`}
                class="max-h-0 overflow-hidden transition-all duration-300 peer-checked:max-h-96"
              >
                <ul class="list-disc pt-4 pl-5 text-white/60">
                  {faq.description.map((item) => (
                    <li class="mb-2 text-base leading-6 font-normal">{item}</li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
